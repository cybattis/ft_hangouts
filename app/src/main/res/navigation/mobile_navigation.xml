<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_messages">

    <fragment
        android:id="@+id/navigation_keypad"
        android:name="com.example.ft_hangouts.ui.keypad.KeypadFragment"
        android:label="@string/title_keypad"
        tools:layout="@layout/fragment_keypad" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="com.example.ft_hangouts.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/fragment_contacts" >
        <action
            android:id="@+id/action_navigation_contacts_to_navigation_new_contact"
            app:destination="@id/navigation_new_contact" />
    </fragment>

    <fragment
        android:id="@+id/navigation_messages"
        android:name="com.example.ft_hangouts.ui.messages.MessagesFragment"
        android:label="@string/title_messages"
        tools:layout="@layout/fragment_messages" />

    <fragment
            android:id="@+id/navigation_new_contact"
            android:name="com.example.ft_hangouts.ui.newContact.NewContactFragment"
            android:label="@string/title_add_contact"
            tools:layout="@layout/fragment_new_contact" >
        <action
                android:id="@+id/action_navigation_new_contact_to_navigation_contacts"
                app:destination="@id/navigation_contacts" />
    </fragment>

</navigation>