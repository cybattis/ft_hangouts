<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.keypad.KeypadFragment">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/numpad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:weightSum="4"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_display"
        app:layout_constraintVertical_bias="0.0"
        app:orientation="horizontal"
        app:rowCount="4">

        <Button
            android:id="@+id/dial_1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="1"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="2"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="3"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="4"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="5"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="6"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="7"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_8"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="8"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_9"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="9"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_star"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="*"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="0"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/dial_sharp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:text="#"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/empty"
            android:visibility="invisible"
            tools:ignore="DuplicateIds" />

        <Button
            android:id="@+id/call_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"
            android:backgroundTint="@color/teal_200"
            android:text="D"
            app:cornerRadius="20dp" />

        <Button
            android:id="@+id/back_space"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_margin="10dp"
            app:layout_gravity="center" />

    </androidx.gridlayout.widget.GridLayout>


    <TextView
        android:id="@+id/phone_number_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Phone number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>